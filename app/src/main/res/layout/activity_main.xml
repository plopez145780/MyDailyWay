<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.plopez.mydailyway.MainActivity">

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/etat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etat" />

    <TextView
        android:id="@+id/vitesseVent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="station"
        android:layout_alignBaseline="@+id/placeLibre"
        android:layout_alignBottom="@+id/placeLibre"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/placeLibre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="place"
        android:layout_below="@+id/etat"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/veloDispo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="velo"
        android:layout_alignBaseline="@+id/station"
        android:layout_alignBottom="@+id/station"
        android:layout_alignStart="@+id/vitesseVent" />
</RelativeLayout>
